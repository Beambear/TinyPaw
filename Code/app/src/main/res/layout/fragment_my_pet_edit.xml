<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/pet_edit_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_pets_24" />

    <TextView
        android:id="@+id/pet_edit_id"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="#0000"
        app:layout_constraintEnd_toStartOf="@+id/pet_edit_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pet_edit_photo" />

    <TextView
        android:id="@+id/pet_edit_name_title"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pet_edit_photo" />

    <EditText
        android:id="@+id/pet_edit_name_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:hint="name"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_mid"
        app:layout_constraintStart_toEndOf="@+id/pet_edit_name_title"
        app:layout_constraintTop_toTopOf="@+id/pet_edit_name_title" />

    <TextView
        android:id="@+id/pet_edit_breeder_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Breeder"
        style="@style/detail_title"
        app:layout_constraintStart_toStartOf="@+id/pet_edit_name_title"
        app:layout_constraintTop_toBottomOf="@+id/pet_edit_name_title" />

    <EditText
        android:id="@+id/pet_edit_breeder_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="breeder"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_mid"
        app:layout_constraintStart_toStartOf="@+id/pet_edit_breeder_title"
        app:layout_constraintTop_toBottomOf="@+id/pet_edit_breeder_title" />

    <TextView
        android:id="@+id/pet_edit_sex_title"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Sex"
        app:layout_constraintStart_toStartOf="@id/pet_edit_breeder_title"
        app:layout_constraintTop_toBottomOf="@+id/pet_edit_breeder_content" />

    <EditText
        android:id="@+id/pet_edit_sex_content"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:hint="sex"
        android:text=""
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_mid"
        app:layout_constraintStart_toEndOf="@id/pet_edit_sex_title"
        app:layout_constraintTop_toTopOf="@id/pet_edit_sex_title" />

    <TextView
        android:id="@+id/pet_edit_weight_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Weight"
        app:layout_constraintStart_toStartOf="@id/pet_edit_sex_title"
        app:layout_constraintTop_toBottomOf="@id/pet_edit_sex_title"
        style="@style/detail_title"/>

    <EditText
        android:id="@+id/pet_edit_weight_content"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:hint="weight"
        android:text=""
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_mid"
        app:layout_constraintStart_toEndOf="@id/pet_edit_weight_title"
        app:layout_constraintTop_toTopOf="@id/pet_edit_weight_title" />

    <TextView
        android:id="@+id/pet_edit_birthday_title"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Birthday"
        app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal"
        app:layout_constraintStart_toStartOf="@id/pet_edit_weight_title"
        app:layout_constraintTop_toBottomOf="@id/pet_edit_weight_title" />

    <EditText
        android:id="@+id/pet_edit_birthday_content"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:hint="birthday"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/pet_edit_birthday_title"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_mid"
        app:layout_constraintStart_toEndOf="@id/pet_edit_birthday_title"
        app:layout_constraintTop_toTopOf="@id/pet_edit_birthday_title" />

    <TextView
        android:id="@+id/pet_edit_current_food_title2"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Current food:"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_mid"
        app:layout_constraintTop_toTopOf="@+id/pet_edit_breeder_title" />

    <TextView
        android:id="@+id/pet_edit_food_cal_context"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="food cal Kcal/kg"
        android:text=""
        app:layout_constraintStart_toStartOf="@+id/my_pet_edit_spinner"
        app:layout_constraintTop_toBottomOf="@+id/my_pet_edit_spinner" />

    <TextView
        android:id="@+id/pet_edit_food_weight_context"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:hint="food weight per day"
        android:text=""
        app:layout_constraintStart_toStartOf="@+id/pet_edit_food_cal_context"
        app:layout_constraintTop_toBottomOf="@+id/pet_edit_food_cal_context" />

    <TextView
        android:id="@+id/pet_edit_cal_intake_title"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="calorie per day"
        android:text=""
        app:layout_constraintStart_toStartOf="@+id/pet_edit_food_weight_context"
        app:layout_constraintTop_toBottomOf="@+id/pet_edit_food_weight_context" />

    <TextView
        android:id="@+id/pet_edit_intro_title"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Introduction:"
        app:layout_constraintStart_toStartOf="@+id/pet_edit_name_title"
        app:layout_constraintTop_toTopOf="@+id/guideline_horizontal" />

    <EditText
        android:id="@+id/pet_edit_intro_context"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="intro detail"
        android:text=""
        app:layout_constraintStart_toStartOf="@+id/pet_edit_intro_title"
        app:layout_constraintTop_toBottomOf="@+id/pet_edit_intro_title" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="203dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="395dp" />

    <Button
        android:id="@+id/edit_submit_my_pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        style="@style/submit_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pet_edit_photo" />

    <Button
        android:id="@+id/edit_cancel_my_pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Cancel"
        app:layout_constraintStart_toStartOf="@+id/edit_submit_my_pet"
        app:layout_constraintTop_toBottomOf="@+id/edit_submit_my_pet" />

    <Button
        android:id="@+id/edit_remove_my_pet"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/red"
        />

    <Spinner
        android:id="@+id/my_pet_edit_spinner"
        android:layout_width="195dp"
        android:layout_height="43dp"
        android:layout_marginStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_mid"
        app:layout_constraintTop_toBottomOf="@+id/pet_edit_current_food_title2" />


</androidx.constraintlayout.widget.ConstraintLayout>