<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/pet_add_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_pets_24" />

    <TextView
        android:id="@+id/pet_add_id"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="#0000"
        app:layout_constraintEnd_toEndOf="@+id/pet_add_photo"
        app:layout_constraintHorizontal_bias="0.663"
        app:layout_constraintStart_toStartOf="@+id/pet_add_photo"
        app:layout_constraintTop_toBottomOf="@+id/pet_add_photo" />

    <TextView
        android:id="@+id/pet_add_name_title"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pet_add_id" />

    <EditText
        android:id="@+id/pet_add_name_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:hint="name"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/pet_add_name_title"
        app:layout_constraintTop_toTopOf="@+id/pet_add_name_title" />

    <TextView
        android:id="@+id/pet_add_breeder_title"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Breeder"
        app:layout_constraintStart_toStartOf="@+id/pet_add_name_title"
        app:layout_constraintTop_toBottomOf="@+id/pet_add_name_title" />

    <EditText
        android:id="@+id/pet_add_breeder_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="breeder"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/pet_add_name_content"
        app:layout_constraintTop_toTopOf="@+id/pet_add_breeder_title" />

    <TextView
        android:id="@+id/pet_add_sex_title"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Sex"
        app:layout_constraintStart_toStartOf="@id/pet_add_breeder_title"
        app:layout_constraintTop_toBottomOf="@+id/pet_add_breeder_title" />

    <EditText
        android:id="@+id/pet_add_sex_content"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:hint="sex"
        android:text=""
        app:layout_constraintStart_toEndOf="@id/pet_add_sex_title"
        app:layout_constraintStart_toStartOf="@+id/pet_add_breeder_content"
        app:layout_constraintTop_toTopOf="@+id/pet_add_sex_title" />

    <TextView
        android:id="@+id/pet_add_weight_title"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Weight"
        app:layout_constraintStart_toStartOf="@id/pet_add_sex_title"
        app:layout_constraintTop_toBottomOf="@id/pet_add_sex_title" />

    <EditText
        android:id="@+id/pet_add_weight_content"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="weight"
        android:text=""
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/pet_add_sex_content"
        app:layout_constraintTop_toTopOf="@id/pet_add_weight_title" />

    <TextView
        android:id="@+id/pet_add_birthday_title"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Birthday"
        app:layout_constraintStart_toStartOf="@id/pet_add_weight_title"
        app:layout_constraintTop_toBottomOf="@id/pet_add_weight_title" />

    <EditText
        android:id="@+id/pet_add_birthday_content"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="birthday"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/pet_add_birthday_title"
        app:layout_constraintStart_toStartOf="@+id/pet_add_weight_content"
        app:layout_constraintTop_toTopOf="@id/pet_add_birthday_title"
        app:layout_constraintVertical_bias="0.428" />

    <TextView
        android:id="@+id/pet_add_current_food_title"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Current food:"
        app:layout_constraintStart_toStartOf="@+id/pet_add_birthday_title"
        app:layout_constraintTop_toBottomOf="@+id/pet_add_birthday_title" />

    <TextView
        android:id="@+id/pet_add_intro_title"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Introduction:"
        app:layout_constraintStart_toStartOf="@+id/pet_add_name_title"
        app:layout_constraintTop_toTopOf="@+id/guideline_horizontal" />

    <EditText
        android:id="@+id/pet_add_intro_context"
        style="@style/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="intro detail"
        android:text=""
        app:layout_constraintStart_toStartOf="@+id/pet_add_intro_title"
        app:layout_constraintTop_toBottomOf="@+id/pet_add_intro_title" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="485dp" />

    <Button
        android:id="@+id/add_submit_my_pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        style="@style/submit_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pet_add_photo" />

    <Button
        android:id="@+id/add_cancel_my_pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Cancel"
        app:layout_constraintStart_toStartOf="@+id/add_submit_my_pet"
        app:layout_constraintTop_toBottomOf="@+id/add_submit_my_pet" />

    <Spinner
        android:id="@+id/my_pet_add_spinner"
        android:layout_width="195dp"
        android:layout_height="43dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/pet_add_current_food_title"
        app:layout_constraintTop_toBottomOf="@+id/pet_add_current_food_title" />


</androidx.constraintlayout.widget.ConstraintLayout>